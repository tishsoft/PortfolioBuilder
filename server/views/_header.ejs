<!DOCTYPE html>
<html>
<head>
<meta charset="utf-8">
<title>Learn About Me</title>
<link rel="stylesheet" href="//maxcdn.bootstrapcdn.com/bootstrap/3.3.6/css/bootstrap.min.css">
<link rel="stylesheet" href="//netdna.bootstrapcdn.com/font-awesome/4.0.3/css/font-awesome.min.css">
</head>
<body>
<div class="navbar navbar-default navbar-static-top" role="navigation">
  <div class="container">
    <div class="navbar-header">
      <a class="navbar-brand" href="/auth">Learn About Me</a>
    </div>
    <ul class="nav navbar-nav navbar-right">
      <% if (currentUser) { %>
        <li>
          <a href="/auth/edit">
            Hello, <%= currentUser.name() %>
          </a>
        </li>
        <li><a href="/auth/logout">Log out</a></li>
      <% } else { %>
        <li><a href="/auth/login">Log in</a></li>
        <li><a href="/auth/signup">Sign up</a></li>
        <li><a href="/auth/facebook"><span class="fa fa-facebook"></span> Facebook</a></li>
        <li><a href="/auth/github"><span class="fa fa-github"></span> Github</a></li>
      <% } %>
    </ul>
  </div>
</div>
<div class="container">
  <% errors.forEach(function(error) { %>
    <div class="alert alert-danger" role="alert">
      <%= error %>
    </div>
<% }) %>
  <% infos.forEach(function(info) { %>
    <div class="alert alert-info" role="alert">
      <%= info %>
    </div>
<% }) %>
